<%- include('partials/header') %>

<h1 class="text-3xl font-bold mb-8">Welcome to Members Only</h1>

<div class="space-y-8">
    <% messages.forEach(function(message) { %>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2"><%= message.title %></h2>
            <p class="text-gray-600 mb-4"><%= message.content %></p>
            <p class="text-sm text-gray-500">
                Posted by <%= message.author %> on <%= new Date(message.createdAt).toLocaleDateString() %>
            </p>
            <% if (user && user.is_admin) { %>
                <form action="/messages/<%= message.id %>" method="POST" class="mt-4">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">Delete</button>
                </form>
            <% } %>
        </div>
    <% }); %>
</div>