<%- include('partials/header') %>

<h1 class="text-3xl font-bold mb-8">Login</h1>

<% if (error && error.length > 0) { %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
    <span class="block sm:inline"><%= error %></span>
  </div>
<% } %>

<form action="/login" method="POST" class="max-w-md mx-auto" id="loginForm">
    <div class="mb-4">
        <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
        <input type="email" id="email" name="email" required class="w-full px-3 py-2 border rounded-lg">
    </div>
    <div class="mb-6">
        <label for="password" class="block text-gray-700 font-bold mb-2">Password</label>
        <input type="password" id="password" name="password" required class="w-full px-3 py-2 border rounded-lg">
    </div>
    <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">Login</button>
</form>
