<%- include('partials/header') %>

<h1 class="text-3xl font-bold mb-8">Join the Club</h1>
    <% if (error && error.length > 0) { %>
        <h3 class="text-xl text-red-500 mb-4"><%= error %></h3>
    <% } %>
<form action="/join-club" method="POST" class="max-w-md mx-auto" id="joinClubForm">
    <div class="mb-6">
        <label for="passcode" class="block text-gray-700 font-bold mb-2">Club Passcode</label>
        <input type="password" id="passcode" name="passcode" required class="w-full px-3 py-2 border rounded-lg">
    </div>
    <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">Join Club</button>
</form>
